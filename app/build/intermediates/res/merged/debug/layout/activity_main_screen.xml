<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.maickel.speechy.MainScreen">
    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="122dp"
        android:id="@+id/presentCard"
        android:onClick="openTextRecognition" >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_keyboard_voice_black_24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:text="Presenteer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/startButton"
            android:gravity="center"
            android:textSize="18dp"
             />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="122dp"
        android:id="@+id/analyticsCard"
        android:layout_below="@id/presentCard"
        android:layout_marginTop="10dp"
        android:onClick="openAnalysticsScreen">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_poll_black_24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:text="Analyse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/openStatistics"
            android:gravity="center"
            android:textSize="18dp"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="122dp"
        android:id="@+id/optionsCard"
        android:layout_below="@id/analyticsCard"
        android:layout_marginTop="10dp"
        android:onClick="openOptionScreen">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_flag_black_24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:text="Instellingen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/addKeywords"
            android:gravity="center"
            android:textSize="18dp"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="122dp"
        android:id="@+id/recordCard"
        android:layout_below="@id/optionsCard"
        android:layout_marginTop="10dp"
        android:onClick="openRecordingsScreen">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_menu_slideshow"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:text="Opnames"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recordButton"
            android:gravity="center"
            android:textSize="18dp"/>
    </android.support.v7.widget.CardView>






</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_options"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.maickel.speechy.Options">

    <EditText
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:ems="10"
        android:textSize="16dp"
        android:id="@+id/trainingEnterTime"
        android:layout_alignBottom="@+id/trainingTime"
        android:layout_alignLeft="@+id/presentationTimeEdit"
        android:layout_alignStart="@+id/presentationTimeEdit" />

    <EditText
        android:layout_width="80dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/presentationTimeEdit"
        android:textSize="16dp"
        android:layout_height="50dp"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_alignBottom="@+id/presentationTime"
        android:layout_toRightOf="@+id/settings"
        android:layout_toEndOf="@+id/settings" />

    <Switch
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:id="@+id/toggleTrainingAlerts"
        android:switchMinWidth="70dp"
        android:layout_alignBaseline="@+id/trainingModeAlerts"
        android:layout_alignBottom="@+id/trainingModeAlerts"
        android:layout_alignLeft="@+id/trainingEnterTime"
        android:layout_alignStart="@+id/trainingEnterTime" />

    <Switch
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:id="@+id/togglePresentationAlerts"
        android:switchMinWidth="70dp"
        android:layout_alignTop="@+id/presentationAlerts"
        android:layout_alignLeft="@+id/presentationTimeEdit"
        android:layout_alignStart="@+id/presentationTimeEdit" />

    <Button
        android:text="Opslaan"
        android:layout_width="wrap_content"
        android:background="@drawable/buttonsmall"
        android:layout_height="wrap_content"
        android:id="@+id/saveOptionsButton"
        android:onClick="saveOptions"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


    <TextureView
        android:id="@+id/textureView3"
        android:layout_height="100dp"
        android:elevation="0dp"
        android:layout_width="350dp"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/trainingMode"
        android:layout_alignParentStart="true" />



    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trainingTime"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <RadioButton
            android:text="Toon Keywords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/practiceKeywordRadio"
            android:layout_below="@+id/trainingTime"
            android:layout_alignParentStart="true"
            android:checked="true" />

        <RadioButton
            android:text="Toon Meest Gesproken Woorden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/practiceMostSpokenWordsRadio"
            android:layout_below="@+id/textureView3"
            android:layout_alignStart="@+id/presentationShowMostRepeatedWordsRadio" />


    </RadioGroup>


    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/presentationRadioGroup"
        android:layout_below="@+id/presentationTime"
        android:layout_toStartOf="@+id/togglePresentationAlerts"
        android:layout_alignParentEnd="true"
        android:weightSum="1">

        <RadioButton
            android:text="Toon Keywords"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:id="@+id/presentationShowKeywordRadio"
            android:layout_below="@+id/presentationTime"
            android:layout_alignParentStart="true"
            android:checked="true" />

        <RadioButton
            android:text="Toon Meest Gesproken Woorden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/presentationShowMostRepeatedWordsRadio"
            android:layout_alignParentEnd="true" />

    </RadioGroup>


    <TextView
        android:text="Instellingen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:id="@+id/settings"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Presentatie Modus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/presentationMode"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="12dp"
        android:layout_below="@+id/settings"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Voeg Keywords Toe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addKeywordButton"
        android:background="@drawable/buttonsmall"
        android:onClick="addKeywordScreen"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Training Modus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trainingMode"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/presentationRadioGroup"
        android:layout_alignStart="@+id/presentationTime" />

    <TextView
        android:text="Presentatie Tijd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="14dp"
        android:layout_marginBottom="23dp"
        android:id="@+id/trainingTime"
        android:layout_alignBottom="@+id/textureView3"
        android:layout_alignStart="@+id/trainingModeAlerts" />

    <TextView
        android:text="Meldingen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="14dp"
        android:id="@+id/trainingModeAlerts"
        android:layout_above="@+id/trainingEnterTime"
        android:layout_alignStart="@+id/trainingMode" />

    <TextView
        android:text="Presentatie tijd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="14dp"
        android:id="@+id/presentationTime"
        android:layout_marginBottom="9dp"
        android:layout_alignBottom="@+id/textureView"
        android:layout_alignStart="@+id/presentationAlerts" />

    <TextureView
        android:id="@+id/textureView"
        android:layout_height="100dp"
        android:elevation="0dp"
        android:layout_width="350dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/presentationMode"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Meldingen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/presentationAlerts"
        android:textColor="#000000"
        android:textSize="14dp"
        android:background="@android:color/transparent"
        android:layout_above="@+id/presentationTimeEdit"
        android:layout_alignStart="@+id/presentationMode" />


</RelativeLayout>
